#:kivy 2.0
<Button>:
    font_size:40
    color:0.3, 0.6, 0.7, 1
    size_hint: 0.3, 0.5

<FloatLayout>:
    Button:
        pos_hint: {'x':0.5, 'top': 1}
        text: 'ree'
    
    Button:
        id: btn
        pos_hint: {'y': 0.3}
        text: 'rawr' if btn.state == 'normal' else 'owo'
        background_color: [1.0,1.0,1.0,1] if btn.state == "normal" else [0.5,0,0,1]
